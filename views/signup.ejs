
<%- include("header") %>

<%- include("components/tab") %>

<div class="container signin">
    <%- include("components/notification") %>
    <div class="jumbotron center">
        <h3 class="login-title">欢迎注册博客系统！</h3>
        <div class="row">
            <form method="post" class="form-horizontal" role="form" enctype="multipart/form-data">
                <div class="form-group">
                        <label for="name" class="col-sm-2 control-label">账号：</label>
                        <div class="col-sm-10">
                          <input type="text" class="form-control" name="name" placeholder="请输入账号">
                        </div>
                      </div>
                      <div class="form-group">
                       <label for="password" class="col-sm-2 control-label">密码：</label>
                       <div class="col-sm-10">
                         <input type="password" class="form-control" name="password" placeholder="请输入密码">
                       </div>
                     </div>
                     <div class="form-group">
                        <label for="password" class="col-sm-2 control-label">确认密码：</label>
                        <div class="col-sm-10">
                          <input type="password" class="form-control" name="repassword" placeholder="请再次输入密码">
                        </div>
                      </div>
                      <div class="form-group">
                          <label for="password" class="col-sm-2 control-label">请选择性别：</label>
                          <div class="col-sm-10 text-align-left">
                              <label class="radio-inline">
                                  <input type="radio" name="gender" id="optionsRadios4"  value="m"> 男
                                </label>
                                <label class="radio-inline">
                                    <input type="radio" name="gender" id="optionsRadios4"  value="f">女
                                  </label>
                                  <label class="radio-inline">
                                      <input type="radio" name="gender" id="optionsRadios4"  value="x">保密
                                    </label>
                          </div>
                        </div>
                        <div class="form-group">
                            <label for="name" class="col-sm-2 control-label">请选择头像：</label>
                            <div class="col-sm-10 text-align-left" style="padding-top:7px">
                                <input type="file" name="avatar"  class="file-input"/>
                            </div>
                          </div>
                          <div class="form-group">
                              <label for="name" class="col-sm-2 control-label">请输入简介：</label>
                              <div class="col-sm-10">
                                  <textarea name="bio" rows="5" class="form-control"></textarea>
                              </div>
                            </div>
                     <div class="form-group">
                         <div class="col-sm-offset-2 col-sm-10">
                             <button type="submit" class="btn btn-success">登录</button>
                         </div>
                     </div>
                    </form>
          </div>
      </div>
</div>

<%- include('footer') %>